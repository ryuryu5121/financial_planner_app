<h1>ファイナンシャルプランナー認証</h1>
<div class="row justify-content-center">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: fplogin_path, scope: :session) do |f| %>

    <%= f.label :email, FinancialPlanner.human_attribute_name(:email) %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label :password, FinancialPlanner.human_attribute_name(:password) %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.submit "認証する", class: "btn btn-primary" %>
    <% end %>

    <p><%= link_to "未登録の方はこちらをクリックして下さい", fpsignup_path %></p>
  </div>
</div>
