<!-- show.html.erb -->
<div class="container">
  <div class="row">
    <div class="col-12 text-center title">
      <h1>予約が完了しました！！</h1>
    </div>
    <div class="col-12 mt-3 text-center content">
      <div>
        <label><strong>日付：</strong></label>
        <p style="display:inline;"><%= @reservation.day %></p>
      </div>
      <div>
        <label><strong>時間：</strong></label>
        <p style="display:inline;"><%= @reservation.time %></p>
      </div>
    </div>
    <div class="col-12 d-flex justify-content-center pt-5">
      <div>
        <%= link_to 'ホーム画面に戻る', current_user, {:class => "f m-2"} %>
      </div>
      <div>
        <%= link_to '予約画面に戻る', reservations_path, {:class => "f m-2"} %>
      </div>
    </div>
  </div>
</div>
